---
export interface Props{
    title: string;
    description: string;
    date: string;
    href: string;
    author: string;
}

const {href, title, description, date, author} = Astro.props;
---

<li class="NoteCard">
    <a href={href}>
        <div class="NoteCard-header">
            <div>
                <h2 class="NoteCard-header-title">{title}</h2>
                <h2 class="NoteCard-header-author">@{author}</h2>
            </div>
        </div>

        <div class="NoteCard-header-coverImage">
            <img src="../../public/event-loop.png">
        </div>
        
        <p>
            {description.substring(1, 100)}...
        </p>

        <div class="NoteCard-footer">
            <span>{date}</span>
        </div>
    </a>
</li>

<style>

    .NoteCard{
        list-style: none;
        padding: 15px;
        display: flex;
        align-items: center;
    }
    .NoteCard:hover{
        background-color: white;
        padding: 15px;
        border-radius: 15px;
    }

    .NoteCard-header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .NoteCard-header > div{
        display: flex;
        flex-direction: column;
    }

    .NoteCard-header-title{
        font-size: 25px;
        font-weight: 400;
        color: rgba(0, 0, 0, 0.8);
        margin-bottom: 5px;
    }

    .NoteCard-header-author{
        font-size: 20px;
        font-weight: 400;
        color: rgba(152, 10, 138, 0.8);
    }

    .NoteCard-header-coverImage{
        width: 100%;
        height: auto;
        border-radius: 15px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

    .NoteCard-header-coverImage > img{
        width: 100%;
    }

    .NoteCard-footer{
        display: flex;
        flex-direction: row;
        justify-content: center;
    }

    .NoteCard-footer>span{
        font-size: 14px;
        color: rgba(0, 0, 0, 0.40);
    }

    .NoteCard p{
        background-color: rgba(0, 0, 0, 0.05);
        padding: 15px;
        border-radius: 10px;
        color: rgba(0, 0, 0, 0.55);
        font-size: 16px;
        margin-bottom: 10px;
    }
</style>